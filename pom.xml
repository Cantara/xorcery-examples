            <version>${xorcery.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.exoreaction.xorcery</groupId>
            <artifactId>xorcery-server</artifactId>
            <version>${xorcery.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.exoreaction.xorcery</groupId>
            <artifactId>xorcery-reactivestreams</artifactId>
            <version>${xorcery.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.exoreaction.xorcery</groupId>
            <artifactId>xorcery-registry</artifactId>
            <version>${xorcery.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.exoreaction.xorcery</groupId>
            <artifactId>xorcery-conductor</artifactId>
            <version>${xorcery.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.exoreaction.xorcery</groupId>
